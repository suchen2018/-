import matplotlib.pyplot as plt
import numpy as np
import pandas as pd

filename1 = 'CV.xlsx'

data1 = pd.read_excel(filename1)


plt.plot(data1['Ewe/V1'],data1['<I>/mA1'],linewidth=3, label='1st cycle', 
                 color='r')
plt.plot(data1['Ewe/V2'],data1['<I>/mA2'],linewidth=3, label='2nd cycle', 
                 color='b')
plt.plot(data1['Ewe/V3'],data1['<I>/mA3'],linewidth=3, label='3rd cycle', 
                 color='g')
plt.plot(data1['Ewe/V4'],data1['<I>/mA4'],linewidth=3, label='4th cycle', 
                 color='m')
plt.plot(data1['Ewe/V5'],data1['<I>/mA5'],linewidth=3, label='5th cycle', 
                 color='c')
plt.plot(data1['Ewe/V6'],data1['<I>/mA6'],linewidth=3, label='6th cycle', 
                 color='y')

x = np.arange(-1, 3, 0.1)
y1 = [0 for elem in x]
plt.plot(x, y1, 'k--')

