#plt.plot(data['Re(Z)/Ohm4'],data['Im(Z)/Ohm4']*-1,linewidth=3, label='2-2', 
#                 color='c', marker='^', markersize=10)

#title='TGA Si adn Si+C'
#plt.title(title, fontsize=14)
plt.legend(loc='lower right', fontsize=14)

plt.xlabel(r'Ewe/V', fontsize=14)
plt.ylabel(r'I/mA', fontsize=14)
plt.tick_params(axis='both',which='major', labelsize=14) 
#刻度样式 axis='both','x','y', which='major','minor','both'

plt.xlim(-0.1,2.1)
